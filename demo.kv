<FirstScreen>:
    Button: 
        text: 'To screen two'
        on_press:
            root.manager.transition.direction = 'left'
            root.manager.current = 'second'

<SecondScreen>:
    Button:
        text: 'back to screen One'
        on_press:
            root.manager.transition.direction = 'right'
            root.manager.current = 'first'